@model ToDoAppLatest.Models.UserDetails
  
@{  
    ViewData["Title"] = "Create";  
}  
  
<h1>User Registration  </h1>  
   
 <form method="post" asp-controller="Account" asp-action="UserRegister">
   <input type="hidden" asp-for="@Model.UserId"/>
    <div class="row">
        <div class="col-3">

            <label>User Name</label>  
            </div>
        <div class="col-3">
                <input asp-for="@Model.UserName" type="text"/>
                <span asp-validation-for=”@Model.UserName” class=”text-danger”></span>
          </div> 
         </div>
    <div class="row">
        <div class="col-3">
                <label>Password</label> 
                </div>
        <div class="col-3">
                <input asp-for="@Model.Password" type="password"/>  
                <span asp-validation-for=”@Model.Password” class="text-danger"></span>
            </div>  
            </div>
    <div class="row">
        <div class="col-3">
            <label>Email</label>
        </div>
        <div class="col-3">
            <input asp-for="@Model.Email" type="text" />
            <span asp-validation-for=”@Model.Email” class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        
        <div class="col-3">
            <br />
            <input type="submit" value="Registration" class="btn btn-primary" />
        </div>
    </div>
    <b>@ViewBag.message</b>


</form>
